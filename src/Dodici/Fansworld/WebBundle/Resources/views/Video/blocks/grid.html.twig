{% if dataGridRelatedId is defined %}
    {% set dataGrid = 'data-grid-related=' ~ dataGridRelatedId  %}
{% else %}
    {% set dataGrid = 'data-grid' %}
{% endif %}

<section id="{{ sectionId }}" {{ dataGrid }}>
    {% for video in videos %}
        <div class="video">
            <a href="{{ path('video_show', {id: video.id, slug: video.slug}) }}">
                {% thumbnail video.image, 'medium' with {'title': video.title} %}
                <span class="video-duration">{{ video.duration|date("i:s") }}</span>
            </a>
            <span data-title class="title">{{ video.title }}</span>
            {#<p data-content>{{ video.content|truncate(55) }}</p>#}
            <i class="ico-watchlater" data-login-required="" data-watch-later="" data-video-id="{{ video.id }}" data-later="false" rel="tooltip" data-original-title="Ver DespuÃ©s"></i>
        </div>
    {% endfor %}
</section>



