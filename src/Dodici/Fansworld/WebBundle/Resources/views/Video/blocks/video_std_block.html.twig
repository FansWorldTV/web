{% if image_size is not defined %}
    {% set image_size = 'home_video' %}
{% endif %}
{% if extra_classes is not defined %}
    {% set extra_classes = '' %}
{% endif %}
{% set videoUrl = path('video_show', {'id': video.id, 'slug': video.slug}) %}
<article class="video video-std-block {{ extra_classes }}">
    <div class="image">
        <a class="title" href="{{ videoUrl }}">
            {% thumbnail video.image, image_size with {'title': video.title} %}
        </a>
        <span class="duration">{{ video.duration|date('i:s') }}</span>
        <i class="ico-watchlater" data-login-required data-watch-later data-video-id="{{ video.id }}" data-later="false" rel="tooltip" title="Ver DespuÃ©s"></i>
        {#<a class="title" href="{{ videoUrl }}" data-modal-url="{{ path('modal_media', {'type': 'video', 'id': video.id}) }}">
            <i class="ico-channels" rel="tooltip" title="Quick view" data-placement="bottom"></i>
        </a>#}
    </div>
    <div class="info">
        <a class="title" href="{{ videoUrl }}">{{ video.title }}</a>
        <span class="author">de <a href="{{ path('user_wall', {'username': video.author.username}) }}">{{ video.author.username }}</a></span>
        <div class="clearfix"></div>
    </div>
</article>
