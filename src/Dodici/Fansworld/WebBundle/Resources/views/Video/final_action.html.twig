<div data-finalaction-detail="{{ idvideodom }}" style="margin-top: 20px;margin-left: 20px;position:relative">

    <script src="{{ asset('bundles/dodicifansworldweb/js/elastislide/modernizr.custom.17475.js') }}" type="text/javascript"></script>

    <p> Hacete fan de tus idolos y equipos </p>
    <div class="buttonsHeaderFinalAction" style="margin-left: 65%;margin-top:-25px;width: 260px;position: relative">
        <p data-viewagain="{{ idvideodom }}" style="cursor: pointer;position:relative">
            <i class="icon-play-circle icon-white"></i> VOLVER A VER
        </p>
        <button class="btn btn-small btn-success" type="button" style="margin-top: -54px;margin-left: 120px;position: relative;">
            PROXIMO VIDEO
        </button>
    </div>

    <!-- Idols Carousel -->
    <ul id="idols_carousel" class="elastislide-list">
        {% for idol in idols %}
            <li><a href="#">
                {% thumbnail idol.image, 'big' with {"title": idol.title, "alt": idol.title, "width": "100px"} %}
            </a></li>
        {% endfor %}
    </ul>
    <!-- End Idols Carousel -->

    <!-- Teams Carousel -->
    <ul id="teams_carousel" class="elastislide-list">
        {% for team in teams %}
            <li><a href="#">
                {% thumbnail team.image, 'big' with {"title": team.title, "alt": team.title, "width": "100px"} %}
            </a></li>
        {% endfor %}
    </ul>
    <!-- End Teams Carousel -->

    <br/>

    <div>
        <p>TE GUSTO ? COMPARTILO! </p>
        <br/>



         <button class="btn-twt-callToAction notlogged"></button>

        <button class="btn-upload-video-callToAction notlogged"><i class="icon-circle-arrow-up icon-white"></i> SUBIR VIDEO</button>

    <script src="{{ asset('bundles/dodicifansworldweb/js/elastislide/jquery.elastislide.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $( '#idols_carousel' ).elastislide();$( '#teams_carousel' ).elastislide();
    </script>
</div>
