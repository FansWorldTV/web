{% extends "DodiciFansworldWebBundle:Layout:one_column.html.twig" %}

{% block header %}
    {% set section_selected = 'home' %}
    {{ parent() }}
{% endblock %}

{% block main %}
    {% set fullwidth = true %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/plugins/packery.pkgd.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/dodicifansworldweb/js/fw.ui.profiles.js') }}" type="text/javascript"></script>
{% endblock %}

{% block main_content %}
    <div class="home-content profiles">
        <ul class="filter-home">
            <li class="active" data-entity-id="null" data-entity-type="null">TODOS</li>
            {% for genre in genres %}
                <li data-entity-id = "{{ genre.id }}" data-entity-type = "genre" >{{ genre.title }}</li>
            {% endfor %}
        </ul>

        <section class="row-fluid most-recent">

        </section>

        <section class="row-fluid popular">
            <header class="clearfix">
                <h3 class="pull-left">Populares</h3>
                <span class="cant pull-left"><span data-total-popular></span> videos</span>
                
                <section class="pull-right popular-tags topics">
                    <ul class="pull-right"></ul>
                    <h3 class="pull-right">Temas</h3>
                </section>
            </header>
            <div class="profiles-container">
                {% for idol in  profiles %}
                    <div class="profile">
                        {% thumbnail idol.image, 'big_square' with {'title':''}%}
                        <div class="info">
                            <span class="title">{{ idol }}</span>
                            <div class="bottom-container clearfix">
                                <div class="data-cant">
                                    {{ idol.fanCount }}
                                    <span>fans</span>
                                </div>
                                <button class="btn btn-success add-fan" data-idolship-add="true" data-idol-id="{{ idol.id }}">+</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="clearfix"></div>
            <div class="add-more">+</div>
        </section>

    </div>
{% endblock %}