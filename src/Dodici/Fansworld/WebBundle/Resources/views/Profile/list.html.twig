{% extends "DodiciFansworldWebBundle:Layout:one_column.html.twig" %}

{% block header %}
    {% set section_selected = 'home' %}
    {{ parent() }}
{% endblock %}

{% block main %}
    {% set fullwidth = true %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/plugins/packery.pkgd.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/dodicifansworldweb/js/fw.ui.profiles.js') }}" type="text/javascript"></script>
{% endblock %}

{% block main_content %}
    <div class="home-content profiles">
        <ul class="filter-home">
            <li class="active" data-entity-id="null" data-entity-type="null">TODOS</li>
            {% for genre in genres %}
                <li data-entity-id = "{{ genre.id }}" data-entity-type = "genre" >{{ genre.title }}</li>
            {% endfor %}
        </ul>

        <section class="row-fluid most-recent" id="profile-gallery">
            <div class="grid-sizer"></div>
            <div class="gutter-sizer"></div>
        </section>

        <section class="row-fluid popular hidden">
            <header class="clearfix">
                <h3 class="pull-left">Populares</h3>
                <span class="cant pull-left" data-total-popular></span>
                
                <section class="pull-right popular-tags topics">
                    <ul class="pull-right"></ul>
                    <h3 class="pull-right">Temas</h3>
                </section>
            </header>
            <div class="profiles-container">
            </div>
            <div class="clearfix"></div>
            <div class="add-more">+</div>
        </section>

    </div>
{% endblock %}