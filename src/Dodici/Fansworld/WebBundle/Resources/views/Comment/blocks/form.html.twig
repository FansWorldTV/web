{% if shortform is not defined %}
    {% set shortform = false %}
{% endif %}

{% if type is not defined %}
    {% set type = appstate.type(entity) %}
{% endif %}
{% if shortform %}
    <div class="status_comment commentform">
        <div class="shortcommentform">
            <textarea class="comment_message" cols="" rows="2" data-type="{{ type }}" data-id="{{ entity.id }}" placeholder='comentar...'></textarea>
            {% if entity.privacy is defined %}
                <input class="post_privacidad" type="hidden" value="{{ entity.privacy }}" />
            {% endif %}
        </div>
    </div>
{% else %}
    <div class="update commentform">
    <span class="deco"></span>
    <div class="upd">
        <textarea cols="" rows="3" class="comment_message" data-type="{{ type }}" data-id="{{ entity.id }}" placeholder="Â¿ Que deseas decir ?"></textarea>
        <button class='btn btn-success comment_button pull-right'>Compartir</button>
        <div class="clearfix"></div>
    </div>
{% endif %}