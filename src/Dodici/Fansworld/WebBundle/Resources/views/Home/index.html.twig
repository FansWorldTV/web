{% extends "DodiciFansworldWebBundle:Layout:one_column.html.twig" %}

{% block header %}
    {% set section_selected = 'home' %}
    {{ parent() }}
{% endblock %}

{% block main %}
    {% set fullwidth = true %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/fw.ui.home.js') }}" type="text/javascript"></script>
{% endblock %}

{% block main_content %}
    <div class="home-gray-bar"></div>
    <div class="home-content">
        <ul class="filter-home">
            {% for genre in genres %}
                <li data-entity-type="genre" data-entity-id="{{ genre.id }}" {% if loop.first %} class="active" {% endif %}>{{ genre.title }}</li>
            {% endfor %}
            {% for category in categories %}
                <li data-entity-type="vc" data-entity-id="{{ category.id }}">{{ category.title }}</li>
            {% endfor %}
        </ul>

        <div class="highlights-container">
            <section class="row-fluid gray highlighteds new">
                <div class="span2">
                    {% for video in highlighted %}
                        {% if loop.index0 < 2 %}
                            {% include "DodiciFansworldWebBundle:Video:blocks/video_std_block.html.twig"  with { video: video, 'image_size': 'home_highlight' } %}
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="highlighted span4">
                    {% for video in highlighted %}
                        {% if loop.index0 == 2 %}
                            {% include "DodiciFansworldWebBundle:Video:blocks/video_std_block.html.twig"  with { video: video, 'image_size': 'home_highlight_double'} %}
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="span6">
                    {% for video in highlighted %}
                        {% if loop.index0 > 2 %}
                            {% include "DodiciFansworldWebBundle:Video:blocks/video_std_block.html.twig"  with { video: video, 'image_size': 'home_highlight'} %}
                        {% endif %}
                    {% endfor %}
                </div>
            </section>
            <div class="clearfix"></div>
            <a href="{{ path('home_fwlist') }}" class="link-to-more">Ver más destacados</a>
        </div>

        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {% if followed %} 
                <section class="row-fluid followed">
                    <header class="clearfix">
                        <h3 class="pull-left">Sigues</h3>
                        <span class="cant pull-left"><span data-total-followed></span> </span>

                        <section class="pull-right followed-tags topics">
                            <ul class="pull-right"></ul>
                            <h3 class="pull-right">Temas</h3>
                        </section>
                    </header>
                    <div class="semantic-grid videos-container">
                        {% include "DodiciFansworldWebBundle:Search:blocks/video_element_list.html.twig"  with { videos: followed } %}
                    </div>
                    <div class="clearfix"></div>
                    <div class="add-more">+</div>
                </section>
            {% endif %}
        {% endif %}

        {% if popular %} 
            <section class="row-fluid popular">
                <header class="clearfix">
                    <h3 class="pull-left">Popular</h3>
                    <span class="cant pull-left"><span data-total-popular></span> </span>

                    <section class="pull-right popular-tags topics">
                        <ul class="pull-right"></ul>
                        <h3 class="pull-right">Temas</h3>
                    </section>
                </header>
                <div class="semantic-grid videos-container">
                    {% include "DodiciFansworldWebBundle:Search:blocks/video_element_list.html.twig"  with { videos: popular } %}
                </div>
                <div class="clearfix"></div>
                <div class="add-more">+</div>
            </section>
            <div class="spinner hidden">
                <div class="mask"></div>
            </div>
        {% endif %}
    </div>

    {% if confirmedModal %}
        <div id="confirmedModal" class="modal hide fade">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>Bienvenido a Fansworld.TV</h3>
            </div>
            <div class="modal-body">
                <p class="systemmessage">{{ 'registration.confirmed'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</p>

                <p>Ya podes empezar a disfrutar y conectarte con fanáticos como vos.</p>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Continuar</a>
            </div>
        </div>

        <script type="text/javascript">
            $(document).ready(function () {
                $("#confirmedModal").modal('show');
            });
        </script>
    {% endif %}

    <div id="upload-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="upload-modal" aria-hidden="true" style="overflow:hidden;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="share-modal" style="text-align: left;">Subir video</h3>
        </div>
        <div class="modal-body">
            <div class="spinner-overlay hide">
                <div class="spinner"><div class="mask"></div></div>
                <span class="legend">Compartiendo</span>
            </div>
            <form>
                <section class="drop-zone">
                    <p class="drop-legend">
                        <span>Arrastra tu video aquí ó <button class="btn btn-success" style="position:relative">Examinar<input type="file" name="file" style="position: absolute; right: 0px; top: 0px; font-family: Arial; cursor: pointer; opacity: 0;width: 100%;" /></button></span>
                        <br/>
                        sino
                    </p>
                    <div class="youtube-input">
                        <figure>
                            <img src="{{ asset('bundles/dodicifansworldweb/images/ico/yt-icon-pop.png') }}" />
                        </figure>
                        <input type="text" placeholder="Link de Youtube" name="youtube-link" />
                    </div>
                </section>
                <section class="form-rest">
                    <div class="row fifty-fifty">
                        <div class="component category">
                            <label>Categoría<sup>*</sup></label>
                            <div class="btn-group" data-toggle="buttons-radio">
                                <button type="button" class="btn">Música</button>
                                <button type="button" class="btn">Deportes</button>
                            </div>
                        </div>
                        <div class="component channel">
                            <label>Canales</label>
                            <div class="dropdown">
                                <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                                    Selecciona un canal
                                    <span class="caret pull-right"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Another action</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="component title">
                            <label>Título<sup>*</sup></label>
                            <input type="text" />
                        </div>
                    </div>
                    <div class="row fifty-fifty">
                        <div class="component description">
                            <label>Descripción</label>
                            <textarea placeholder="Cuéntanos más sobre este video."></textarea>
                        </div>
                        <div class="component tags">
                            <label>Tags</label>
                            <textarea placeholder="Separados con comas. ( Ej. Messi, gol )"></textarea>
                        </div>
                    </div>
                </section>
                <button class="button-submit-action pull-right hidden">Subir Video</button>
                <div class="progress">
                    <div class="bar" style="width: 60%;"></div>
                    <span class="percent-value">60%</span>
                </div>
            </form>
        </div>
    </div>
{% endblock %}