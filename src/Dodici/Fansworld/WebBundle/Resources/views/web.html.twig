{% extends "DodiciFansworldWebBundle:Layout:base.html.twig" %}



{% block body %}
	{{ facebook_initialize({'xfbml': true, 'fbAsyncInit': 'onFbInit();', 'culture': appstate.culture(app.request.locale) }) }}
	
	<div class="wrap">
    	{% block header %}
            <header id='header' class='navbar navbar-fixed-top'>
                {% render "DodiciFansworldWebBundle:Default:menubar" %}
            </header>
        {% endblock %}
        
        {% block toolbar %}
            <!--Toolbar-->
            <nav id='toolbar' class="leftmenubar {{ preferences.get('toolbar_pos')|default('top') }}" data-fwtoolbar="true">
                {% render "DodiciFansworldWebBundle:Default:leftmenubar" %}
            </nav>
        {% endblock %}
    	
    	{% block main %}
            <div id="main-content-frame" class="container-fluid {{ preferences.get('toolbar_pos')|default('top') }}">
                <div class='row-fluid'>
                    {% block maincontent %}  
                        <section id="content" class="span7">
                            {% block content %}
                            {% endblock %}
                        </section>
                        
                        <aside id='relatedcolumn' class='span3'>
                            {% block relatedcolumn %}
                                {% render "DodiciFansworldWebBundle:Default:relatedcolumn" %}
                            {% endblock %}
                        </aside>
                    {% endblock %}
                    
                    <aside id='adcolumn' class='span2 advertising'>
                        {% block advertising %}
                            {% render "DodiciFansworldWebBundle:Default:adcolumn" %}
                        {% endblock %}
                    </aside>
                </div>
            </div>
    	{% endblock %}
    	
    	{% block footer %}
            {% include "DodiciFansworldWebBundle:Default:footer.html.twig" %}
        {% endblock %}
    	
	</div>	
{% endblock %}