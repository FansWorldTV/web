{% extends "DodiciFansworldWebBundle::popup.html.twig" %}

{% form_theme form 'DodiciFansworldWebBundle::form.html.twig' %}

{% block content %}
    {% if refresh %}
        <script type="text/javascript">
            window.top.location.href = "{{ refresh }}";
        </script>
    {% else %}
        <script src="{{ asset('bundles/dodicifansworldweb/js/popup.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/dodicifansworldweb/js/fw.ui.metadata.js') }}" type="text/javascript"></script>

        <script type="text/javascript">
            $(document).ready(function () {
                $("#form_tagtextac").fwTagify({action: 'tag'});
            })
        </script>

        <div class="greybox">
            <div class="uploadPhotoVideoForm">
                <form action="{{ path('edit_popup',{id:id, type:type}) }}" method="post" enctype="multipart/form-data"
                      class="bigform upload-photo">
                    <div class="row-fluid">
                        <section class="span7">
                            {{ form_widget(form) }}
                            <li class="clearfix">
                                <label for="form_tagtext">Tags</label>

                                <div class="edit">
                                    <input class="completer" type="text" id="form_tagtextac" data-action="tag"
                                           data-route="_tag_ajaxmatch" data-entity-id="{{ id }}"
                                           data-entity-type="{{ type }}" data-field="form_tagtext"/>
                                    <ul class="selectedtags"></ul>
                                </div>
                            </li>
                        </section>
                        <aside class="span3">

                        </aside>
                    </div>
                    <input type="submit" name="submit" value="Guardar" id="saveEdit" class="btn btn-primary"/>
                </form>
            </div>
        </div>

        <div class="templateFieldAlbumName hidden">
            <div class="control-group" style="display:none;"><input type="text" name="album_new_name"
                                                                    required="required"/></div>
        </div>
    {% endif %}
{% endblock %}