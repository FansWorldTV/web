{% extends "DodiciFansworldWebBundle::popup.html.twig" %}

{% form_theme form 'DodiciFansworldWebBundle::form.html.twig' %}

{% block content %}
	{% if refresh %}
		<script type="text/javascript">
			window.top.location.href = "{{ refresh }}";
		</script>
	{% else %}
	    <script src="{{ asset('bundles/dodicifansworldweb/js/shareTag_UploadPhoto.js') }}" type="text/javascript"></script>

        <script type="text/javascript">
            shareEngine.init();
            tagEngine.bindTokenizer();
        </script>

	<div class="greybox">
		<div class="uploadPhotoVideoForm">
			<form action="" method="post" enctype="multipart/form-data" class="bigform upload-photo">
				 <div class="row-fluid">
                    <section class="span7">
                        {{ form_widget(form) }}
                            <li class="clearfix">
	                        <label for="form_tagtext">Tags</label>
	                        <div class="edit">
	                            <input class="completer" type="text" id="form_tagtextac" data-route="tag_ajaxget" data-field="form_tagtext" />
	                            <ul class="selectedtags"></ul>
	                        </div>
	                    </li>
                    </section>
                    <aside class="span3">

                    </aside>
                </div>
		            <input type="submit" name="submit" value="Guardar" id="saveEdit" class="btn btn-primary"/>
			</form>
		</div>
	</div>

	<div class="templateFieldAlbumName hidden">
		<div class="control-group" style="display:none;"><input type="text" name="album_new_name" required="required" /></div>
	</div>
	{% endif %}
{% endblock %}