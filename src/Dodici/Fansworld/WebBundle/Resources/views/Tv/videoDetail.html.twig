{% extends "DodiciFansworldWebBundle:Tv:base.html.twig" %}

{% use "DodiciFansworldWebBundle:Layout/Snippet:tv_videodetail.html.twig"  %}

{% block title %}{{ parent() }} - Video detail{% endblock %}


{% block breadcrumb %}
    {{ parent() }}
    <span class="nav-bar tv">TV {% if video.videocategory %}| <a href="">{{ video.videocategory.title }}</a>{% endif %}</span>
{% endblock %}

{% block top_left_content %}
    {% include 'DodiciFansworldWebBundle:Default:share.html.twig' with {entity: video} %}
    <iframe class="videoframe" src="{{ flumotiontwig.videoplayerurl(video) }}"></iframe>
{% endblock %}

{% block top_right_content %}
    {% include 'DodiciFansworldWebBundle:Default:blocks/button_group.html.twig'  %}
    
    {% include 'DodiciFansworldWebBundle:Video:blocks/grid.html.twig' with {videos: videosRelated, sectionId:'videos-related-sort',dataGridRelatedId: video.id} %}
{% endblock %}

{% block bottom_left_content %}
    {{ parent() }}
    <div class="audience-list">
        <div class="audience-list-tab">LO ESTA VIENDO<span></span></div>
        {% for audienceuser in audience %} 
            <a href="{{ path('user_wall', {'username': audienceuser.username}) }}" class="viewer">{% thumbnail audienceuser.image, 'micro_square' with {title: audienceuser} %}</a>
        {% endfor %} 
    </div>
    <p></p>
    {% include 'DodiciFansworldWebBundle:Comment:blocks/box.html.twig' with {entity: video} %}
{% endblock %}
    
{% block bottom_right_content %}
    {{ parent() }}
    {% include 'DodiciFansworldWebBundle:Video:blocks/grid.html.twig' with {videos: videosRecommended, sectionId:'videos-related'} %}
{% endblock %}