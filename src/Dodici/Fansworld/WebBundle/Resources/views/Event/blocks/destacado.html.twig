{% if evento is not defined %}
    {% set evento = null %}
{% endif %}

{% if evento is not null %}
    {% if appstate.EventTypeName(evento.type) == 'Partido' %}

        <section class='evento-destacado row-fluid' >
            <div class="span5 row-fluid escudos-container">
                {% for hasteam in evento.hasteams %}
                    <div class="span6 escudo">
                        {% thumbnail hasteam.team.image, 'big_square' with {title: hasteam.team.title} %}
                    </div>
                {% endfor %}
            </div>

            <div class="span7 datos-container">
                <div class='titulo'>{{ evento }}</div>
                <div class='subtitulo'>{{ evento.stadium }}</div>
                <div class='fecha'>{{ evento.fromtime|date("d/m/Y H:i") }}</div>
                <div class='checkin-container'>
                    {% if eventoDestacadoChecked or eventoDestacadoChecked is null %}
                        <a href="{{ path('event_show', {'id': evento.id}) }}" data-login-require><button class='btn btn-large btn-danger'>IR</button></a>
                    {% else %}
                        <button class='btn btn-large btn-danger' data-event-id='{{ evento.id }}' data-event-check-in>CHECK IN</button>
                    {% endif %}
                </div>
            </div>
        </section>   
    {% endif %}
{% endif %}