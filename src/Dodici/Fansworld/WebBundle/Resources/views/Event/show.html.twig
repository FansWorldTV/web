{% extends "DodiciFansworldWebBundle:Event:base.html.twig" %}

{% block title %}Eventos - Muro{% endblock %}

{% block event_body %}
    {% include "DodiciFansworldWebBundle:Event:blocks/header.html.twig"  %}

    {% include "DodiciFansworldWebBundle:Event:blocks/wall.html.twig"  %}

    {% if not checked and not entity.finished %}
        <script type="text/javascript">
            $.modalPopup({
                'href': Routing.generate( appLocale + '_event_checkin', {
                    'id': {{ entity.id }}
                }),
                'width': 600,
                'close': '.checkin-modal .headerbar .close-button',
                'onload': function(settings){
                    events.checkIn();
                    $(settings.close).click(function(){
                            location.href = "{{ path('event_home',{}) }}";
                    });
                }
            });
        </script>
    {% else %}
        <script type="text/javascript">
            $(document).ready(function(){
                {% if checked  %}
                    var checkedTeam = {{ checked.team.id }};
                    if(events.getLocalVisitante(checkedTeam) == 'local'){
                        $("form[data-event-wall='guest']").parents('.guest').hide();
                    }else{
                        $("form[data-event-wall='local']").parents('.local').hide();
                    }
                {% else %}
                    $(".eventwall-form").hide();
                {% endif %}
            });
        </script>
    {% endif %}
{% endblock %}