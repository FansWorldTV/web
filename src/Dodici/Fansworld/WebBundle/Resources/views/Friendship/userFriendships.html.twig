{% extends "DodiciFansworldWebBundle:User:user_base.html.twig" %}

{% block title %}{{ parent() }} - Muro{% endblock %}

{% block profile_tabs %}
	{% set active_tab = 'fans' %}
	{{ parent() }}
{% endblock %}

{% block profile_head %}
	{{ parent() }}
{% endblock %}

{% block inner_content %}
    <div class="cont clearfix">
        <h2>Búsqueda</h2>
        <div class="user_list">
            <div class="search">
                <form id="formSearch" method="post" action="" class="friends">
                    <input type="text" name="query" value="" id="query"/>
                    <input type="button" value="Buscar" name="submit" id="search" class="hidden"/>
                </form>
            </div>
            <div class="mask">
                <div class="ajax-loader hidden">
                    <img src="{{ asset('bundles/dodicifansworldweb/images/ajax-loader.gif') }}" alt="" />
                </div>
                <ul class="friends listMosaic"> 
                                    {% for friend in friends %}
                        <li>
                            <a href="{{ path('user_wall', {username: friend.username}) }}">
                                <div class="avatar">
                                    {% thumbnail friend.image, 'avatar' %}
                                </div>
                                <div class="info">
                                    <h3 class="name">{{ friend }}</h3>
                                </div>
                            </a>
                        </li>
                                    {% endfor %}
                    </ul>
                </div>
            </div>
    </div>
    <div class="paginador">
        <input type="hidden" id="userid" value="{{ user.id }}" />
        <a href="#" id="addMore" class="hidden loadmore">Agregar más</a>
    </div>

    <div class="friends templates hidden">
        <ul class="listMosaicTemp">
            <li class="element">
                <a href="user_profile.php">
                    <div class="avatar">
                        <img src="demo/user6.jpg" width="50" height="50" />
                    </div>
                    <div class="info">
                        <h3 class="name">Carlos Aguilar</h3>
                    </div>
                </a>
            </li>
        </ul>
    </div>
{% endblock %}