{% extends "DodiciFansworldWebBundle::web.html.twig" %}

{% block title %}{{ parent() }} - Búsqueda{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/teams.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
<div class="cont clearfix">
    <h2>Listado de equipos</h2>
    <div class="user_list">
        <div class="mask">
            <ul class="categories">
                {% for category in categories %}
                    <li categoryId = "{{ category.id }}">{{ category.title }}</li>
                {% endfor %}
            </ul>
            <br/>
            <ul class="listMosaic" style="display: block; ">
            </ul>
            <a href="#" id="addMore" class="loadmore hidden">Agregar más</a>
        </div>
    </div>
</div>
<input type="hidden" id="categoryId" value="{% if categoryId %} {{ categoryId }} {% else %} null {% endif %}"/>
<script type="text/javascript">
    $(document).ready(function(){
        list.category = {% if categoryId %} {{ categoryId }} {% else %} null {% endif %};
        list.init();
    });
</script>
{% endblock %}