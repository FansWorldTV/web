{% extends "DodiciFansworldWebBundle:Layout:base.html.twig" %}

{% block main %}
    <div id="main-content-frame" class="container-fluid three-column">
        <div class='row-fluid'>
            {% block maincontent %}
                {# Content of action #}
                <section id="content" class="span8"> <!--provisorio el span-->
                    {% block content %}
                    {% endblock %}
                </section>

                {# TODO RELATEDCOLUMN #}
                <aside id='relatedcolumn' class='span3'>
                    {% block relatedcolumn %}
                        {% if entity is defined and entity %}
                            {% render "DodiciFansworldWebBundle:Default:relatedcolumn" with {entity: entity} %}
                        {% else %}
                            {% render "DodiciFansworldWebBundle:Default:relatedcolumn" %}
                        {% endif %}
                    {% endblock %}
                </aside>
            {% endblock %}
        </div>
    </div>
{% endblock %}