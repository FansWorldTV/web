<?xml version="1.0" encoding="UTF-8"?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
   
   {# STATIC PAGES #}
   <url>
      <loc>{{ url('homepage') }}</loc>
      <changefreq>daily</changefreq>
      <priority>1.0</priority>
   </url>
   
   <url>
      <loc>{{ url('team_list') }}</loc>
      <changefreq>daily</changefreq>
      <priority>0.9</priority>
   </url>
   
   <url>
      <loc>{{ url('idol_home') }}</loc>
      <changefreq>daily</changefreq>
      <priority>0.9</priority>
   </url>
   
   <url>
      <loc>{{ url('video_list') }}</loc>
      <changefreq>hourly</changefreq>
      <priority>0.9</priority>
   </url>
   
   {% for vc in videocategories %}
       <url>
          <loc>{{ url('video_category', {id: vc.id, slug: vc.slug}) }}</loc>
          <changefreq>hourly</changefreq>
          <priority>0.8</priority>
       </url>
   {% endfor %}
   
   {% for team in teams %}
       <url>
          <loc>{{ url('team_land', {slug: team.slug}) }}</loc>
          <changefreq>hourly</changefreq>
          <priority>0.6</priority>
       </url>
   {% endfor %}
   
   {% for idol in idols %}
       <url>
          <loc>{{ url('idol_land', {slug: idol.slug}) }}</loc>
          <changefreq>hourly</changefreq>
          <priority>0.6</priority>
       </url>
   {% endfor %}
   
   {% for user in users %}
       <url>
          <loc>{{ url('user_land', {username: user.username}) }}</loc>
          <changefreq>hourly</changefreq>
          <priority>0.6</priority>
       </url>
   {% endfor %}
   
   {% for video in videos %}
       <url>
          <loc>{{ url('video_show', {id: video.id, slug: video.slug}) }}</loc>
          <changefreq>daily</changefreq>
          <priority>0.6</priority>
       </url>
   {% endfor %}
   
   {% for photo in photos %}
       <url>
          <loc>{{ url('photo_show', {id: photo.id, slug: photo.slug}) }}</loc>
          <changefreq>weekly</changefreq>
          <priority>0.6</priority>
       </url>
   {% endfor %}
   
</urlset> 