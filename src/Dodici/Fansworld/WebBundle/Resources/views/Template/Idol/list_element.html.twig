{% raw %}
<dt class="idol">
    <img src="{{>avatar}}" />
    <p>
        <a href="{{>idolUrl}}" class="name">{{>name}}</a>
        <a href="{{>teamUrl}}" clasS="team">{{>team}}</a>
        <br/>
        {{if topFan}}
        <span class="fans">Top Fan: 
            <a href="{{>topFanUrl}}">{{>topFan}}</a> 
        </span>
        {{/if}}
    </p>
</dt>
    <dd>
        <button class="btn btn-success {{if isFan}}disabled{{else}}btn_teamship add{{/if}}" data-idol-id="{{>id}}">Ser fan</button>
        
        <ul>
                <li><span>{{>fanCount}}</span><br/> fans</li>
                <li><span>{{>videoCount}}</span><br/> videos</li>
                <li><span>{{>photoCount}}</span><br/> fotos</li>
            
        </ul>
    </dd>
{% endraw %}