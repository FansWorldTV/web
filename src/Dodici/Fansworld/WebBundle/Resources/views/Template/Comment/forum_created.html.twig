{% extends 'DodiciFansworldWebBundle:Template/Comment:base.html.twig' %}

{% block avatar %}
	<div class="ico">
		<img src="{{ asset('bundles/dodicifansworldweb/images/ico/comments_add.png' )}}" alt="icon" />
	</div>
{% endblock %}

{% block action %}
	<span class="action_user">
		{% raw %}
			<a href="{{>authorWallUrl}}">{{>authorName}}</a>
		{% endraw %} 
		{% block share_action_text %}
			{{ 'created the forum'|trans }}
			{% raw %}
				<a href="{{>shareUrl}}">{{>shareTitle}}</a>
			{% endraw %}
		{% endblock %}		
	</span>
{% endblock %}


{% block title %}{% endblock %}
{% block description %}{% endblock %}
