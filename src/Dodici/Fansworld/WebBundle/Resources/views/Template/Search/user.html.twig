{% raw %}
    <li>
        <div class='fan-container'>
            <div class="avatar">
                {{if image}}
                    <a href="{{>url}}"><img title="{{>title}}" width="150" src="{{>image}}"></a>
                {{else}}
                    <a href="{{>url}}">
{% endraw %}
                        <img src="{{ asset('bundles/dodicifansworldweb/images/profile_no_image.png' )}}" alt="avatar" />
{% raw %}
                    </a>
                {{/if}}
            </div>
            <span class="name"><a href="{{>url}}">{{>title}}</a></span>

            {{if fanCount>0}}
                <span class="friendCount">{{>fanCount}}</span>
            {{/if}}

            <div class="addFriend" data-add-fan>
