{% raw %}
<!-- ModalXXX -->
<div id="{{>modalId}}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="{{>modalLabel}}" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="{{>modalLabel}}">{{>modalTitle}}</h3>
  </div>
  <div class="modal-body">
    <div id="drop_zone" style="border:2px dashed #bbb;border-radius:4px;text-align:center;padding:100px">Arrastre los archivos aqui o
      <div class="btn btn-success" style="position: relative;">seleccione desde su PC
        <input type="file" name="file" style="position: absolute; right: 0px; top: 0px; font-family: Arial; cursor: pointer; opacity: 0;width: 100%;">
      </div>
    </div>
<div style="border:1px solid #bbb;border-radius:4px;text-align:center;padding: 10px;margin-top:10px;height: 40px;">
<div class="control-group">
              <label class="control-label" for="inputEmail" style="
    background-image: url(http://www.youtube.com/yt/brand/media/image/yt-brand-standard-logo-95x40.png);
    height: 40px;
    background-repeat: no-repeat;
    background-position-x: 0px;
    width: 95px;
    float: left;
    vertical-align: middle;
"></label>
              <div class="controls" style="
    vertical-align: middle;
">
                <input type="text" placeholder="Youtube Link.." data-youtubelink style="
    vertical-align: middle;
    display: inline-block;
    float: left;
    margin-top: 5px;
    margin-left: 10px;
"><button class="btn" type="button" data-youtubeshare="{{ path('video_youtubeupload') }}" style="
    float: left;
    vertical-align: middle;
    margin-top: 5px;
    margin-left: 10px;
">Share!</button>
              </div>
            </div>
    </div>
    <output class="list"><ul></ul></output>
  </div>
  <div class="modal-footer">
    <button id="modal-btn-close" class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    <button id="modal-btn-save" class="btn btn-primary" disabled>Guardar</button>
  </div>
</div>
