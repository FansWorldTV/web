{% raw %}
<!-- ModalXXX -->
<div id="{{>modalId}}" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="{{>modalLabel}}" aria-hidden="true" style="overflow:hidden;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="{{>modalLabel}}">{{>modalTitle}}</h3>
  </div>
  <div class="modal-body">
    <div id="drop_zone" class="drop_zone">Arrastre los archivos aqui o
      <div class="btn btn-success" style="position: relative;">seleccione desde su PC
        <input type="file" name="file" style="position: absolute; right: 0px; top: 0px; font-family: Arial; cursor: pointer; opacity: 0;width: 100%;">
      </div>
    </div>
    <div id="youtube_share" class="youtube_share">
      <div class="control-group">
        <label class="control-label yt_logo" for="inputEmail"></label>
        <div class="controls">
          <input type="text" placeholder="Youtube Link.." data-youtubelink>
          <button class="btn" type="button" data-youtubeshare="video/youtubeupload">Share!</button>
          <span data-sharestatus class="text-success help-inline"><small data-sharestatus-text></small></span>
        </div>
      </div>
    </div>

    <output class="list"><ul></ul></output>
  </div>
  <div class="modal-footer">
    <progress style="display: none;" min="0" max="100" value="0">
      {#<strong>Total: <span>70</span>%</strong>#}
    </progress>
    <span class="pull-right">
        <button id="modal-btn-delete" class="btn btn-danger hidden">Eliminar</button>
        <button id="modal-btn-close" class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
        <button id="modal-btn-save" class="btn btn-primary">Guardar</button>
    </span>
  </div>
</div>
{% endraw %}