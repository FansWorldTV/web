{% raw %}
<article class="video">
    <div class="image">
        <a class="title" {{if active}}href="{{>url}}"{{/if}}>
            <img src="{{>image}}" alt="{{>title}}"/>
        </a>
        <span class="duration">{{>duration}}</span>
        {{if active}}
        <i class="ico-watchlater" data-login-required data-watch-later data-video-id="{{>id}}" data-later="false"
           rel="tooltip" title="Watch later"></i>
        {{/if}}
    </div>
    <div class="info">
        <a class="title" {{if active}}href="{{>url}}"{{/if}}>{{>title}}</a>
        <span class="author">de <a href="{{>author.url}}">{{>author.username}}</a></span>

        <div class="clearfix"></div>
    </div>
</article>
{% endraw %}