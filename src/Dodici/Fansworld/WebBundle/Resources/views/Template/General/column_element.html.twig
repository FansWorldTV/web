{% raw %}
<article id="{{>id}}"  class="post item video-std-block" data-element-type="{{>type}}" data-element-date="{{>date}}">
    <div class="image">
        <a class="title" href="{{>href}}">
            <img src="{{>image}}" alt="{{>title}}"/>
        </a>
        <span class="duration">{{>duration}}</span>
        <i class="ico-watchlater" data-login-required data-watch-later data-video-id="{{>id}}" data-later="false"
           rel="tooltip" title="Watch later"></i>
        <a class="title" href="{{>href}}" data-modal-url="{{>hrefModal}}">
            <i class="ico-channels" rel="tooltip" title="Quick view" data-placement="bottom"></i>
        </a>
    </div>
    <div class="info">
        <a class="title" href="{{>href}}">{{>title}}</a>
        <span class="author">de <a href="{{>authorHref}}">{{>author}}</a></span>

        <div class="clearfix"></div>
    </div>
</article>
{% endraw %}