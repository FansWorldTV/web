    <div class="image">
        <a class="title" href="{{>href}}">
            <img src="{{>image}}" alt="{{>title}}"/>
        </a>
        <span class="duration">{{>duration}}</span>
        <i class="ico-watchlater" data-login-required data-watch-later data-video-id="{{>id}}" data-later="false"
           rel="tooltip" title="Ver DespuÃ©s"></i>
    </div>
    <div class="info">
        <a class="title" href="{{>href}}">{{>title}}</a>
        <span class="author">de <a href="{{>authorHref}}">{{>author}}</a></span>

        <div class="clearfix"></div>
