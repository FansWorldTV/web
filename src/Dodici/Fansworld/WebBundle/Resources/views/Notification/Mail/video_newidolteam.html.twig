{% extends 'DodiciFansworldWebBundle:Mail:base.html.twig' %}

{% block title %}
    <title>Fansworld - {{ "notification_video_newidolteam"|trans({'%video%': notification.video}) }}</title>
{% endblock %}
    
{% block text %}
    <p style="margin-bottom: 15px;margin-top: 15px;">Hola {{ notification.target }},</p>
    <div style="margin-bottom: 20px;">
        <span style="float: left;margin-right: 15px;"><img src="{{ appmedia.imageurl(notification.target.image, 'avatar') }}" style="width: 45px;height: 45px;"/></span>    
        <div>
            <p style="margin-bottom: 10px;">
                Fansworld subió un nuevo vídeo <a href="{{ url('video_show', { id: notification.video.id, slug: notification.video.slug }) }}">{{ notification.video }}</a>
                taggeado con: <br />
                {% for ht in notification.video.hasteams %}
                    {{ ht.team }} <br />
                {% endfor %}
                
                {% for ht in notification.video.hasidols %}
                    {{ ht.idol }} <br />
                {% endfor %}
            </p>
        </div>
    </div>
    <div style="clear: both;"></div>
    <p style="font-size: 11px; color: #c0c0c0; margin-top: 60px;">Ajustar tus preferencias de las notificaciones que recíbes</p>
    </div>
{% endblock %}