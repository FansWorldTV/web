{% extends "DodiciFansworldWebBundle:User:profile_base.html.twig" %}

{% block title %}{{ parent() }} - {{ 'Idols'|trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block profile_tabs %}
	{% set active_tab = 'idols' %}
	{{ parent() }}
{% endblock %}

{% block profile_head %}
    {{ parent() }}
{% endblock %}

{% block inner_content %}
    <section class="row-fluid">
        {% if idolships|length > 0 %}
            <ul class="idolships unstyled">
                {% for idolship in idolships %}
                    <li>
                        {% if idolship.idol.image %}
                            {% thumbnail idolship.idol.image, 'avatar' %}
                        {% else %}
                            <img src="{{ asset('bundles/dodicifansworldweb/images/profile_no_image.png' )}}" />
                        {% endif %}
                        <button class="btn btn-mini btn-success">SER FAN</button>
                        <span class="fan-quantity">2233</span>    
                        <span class="idol-name">{{ idolship.idol }}</span>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <h3>No posee Ã­dolos</h3>
        {% endif %}
    </section>

<div id="templates" class="hidden">
    <li>
        <img src="{{ asset('bundles/dodicifansworldweb/images/profile_no_image.png' )}}" />
        <button class="btn btn-mini btn-success">SER FAN</button>
        <span class="fan-quantity">2233</span>    
        <span class="idol-name">idol</span>
    </li>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        var addMore = {% if addMore%} true {% else %} false {% endif %};
        
        $(window).endlessScroll({
            fireOnce: true,
            loader: '<div class="loading">CARGANDO ;)<div>',
            callback: function(p){
                if(addMore){
                    ajax.genericAction('user_ajaxidols', {'page': p}, function(r){
                        console.log(r);
                        addMore = r.addMore;
                        for(var i in r.idolship){
                            var idol = r.idolship[i];
                            var template = $("#templates li").clone();
                            if(idol.avatar){
                                $(template).find('img').attr('src', idol.avatar);
                            }
                            $(template).find('.idol-name').html(idol.name);
                        }
                    });
                }
            }
        });
    });
</script>
{% endblock %}
