{% extends "DodiciFansworldWebBundle:User:profile_base.html.twig" %}

{% block title %}{{ parent() }} - {{ 'Photos'|trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/albums.js') }}" type="text/javascript"></script>
{% endblock %}

{% block profile_tabs %}
	{% set active_tab = 'photos' %}
	{{ parent() }}
{% endblock %}

{% block profile_head %}
	{{ parent() }}
	{% if (user == app.user) %}
        <div class="update clearfix"> 
            <span></span> 
            <div class="upd_option clearfix"> 
                <a class="btn_picture btn_upload_photo" href="{{ path('photo_fileupload') }}">{{ 'upload photo'|trans }}</a> 
            </div>    
        </div>
    {% endif %}
{% endblock %}

{% block inner_content %}
	
	    <div class="cont clearfix">
	        <div class="user_album">
	            <div class="mask">
	                {% for photo in photos %}
	                    <div class="pic"><a href="{{ path('photo_show', {'id': photo.id, 'slug': photo.slug}) }}">{% thumbnail photo.image, 'small' %}</a></div>
	                {% endfor %}
	            </div>
	        </div>
	    </div>
	    {% if viewMorePhotos %}
	        <a class="loadmore" href="{{ path('user_listphotos', {username: user.username}) }}">ver todas las imágenes</a>
	    {% endif %}
	    
	    <div class="cont clearfix">
	        <h2>Álbumes de usuario</h2>
	        <div class="album_covers">
	            <div class="mask"> 
	                {% for album in albums %}
	                    <div class="album_cover"> 
	                        <a href="{{ path('album_show', { 'id': album.id, 'slug': album.slug } ) }}">{% thumbnail album.image, 'medium' %}</a>
	                        <a href="{{ path('album_show', { 'id': album.id, 'slug': album.slug } ) }}">{{ album.title }}</a>
	                        <span>{{ album.photoCount }} {{ 'photos'|trans }} - <a href="{{ path('album_show', { 'id': album.id, 'slug': album.slug } ) }}">{{ album.commentCount }} {{ 'comments'|trans }}</a></span>
	                    </div>
	                {% endfor %}
	            </div>
	        </div>
	    </div>
	    {% if viewMoreAlbums %}
	        <a class="loadmore albums" href="#1">ver más</a> 
	    {% endif %}
	<input type="hidden" value="{{user.id}}" id="userid"/>
	<div id="templates" class="hidden">
	    <div class="album_cover"> 
	        <a class="image" href=""><img src=""></a>
	        <a class="title" href=""></a>
	        <span></span>
	    </div>
	    <div class="pic">
	        <a href="photo.php">
	            <img src="" alt="picture" />
	        </a>
	    </div>
	</div>
    <script type="text/javascript">
        $(document).ready(function(){
            albums.init();
        });
    </script>
{% endblock %}
