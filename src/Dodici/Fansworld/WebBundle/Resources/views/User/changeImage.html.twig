{% extends "DodiciFansworldWebBundle:User:profile_edit_base.html.twig" %}

{% use "DodiciFansworldWebBundle:Layout/Snippet:profile_inner_fullwidth.html.twig"  %}

{% block user_edit_toolbar %}
	{% set current_edit_toolbar = 'profileimage' %}
	{{ parent() }}
{% endblock %}

{% block inner_content %}
<div class="upload_image clearfix">
	<div class="current">
		{% if media %}
			{% thumbnail media, 'medium' with { class: 'roundedimg'} %}
		{% else %}
			<img class="roundedimg" src="{{ asset('bundles/dodicifansworldweb/images/profile_no_image.png') }}" alt="" />
		{% endif %}
	</div>
	<div class="form">
		<div class="greybox">
			<form action="{{ path('user_change_image') }}" method="post" enctype="multipart/form-data" class="bigform change-image">
				<div class="form-changeimage fieldcontainer">
					<ul class="fields">
		        		{{ form_widget(form) }}
		        	</ul>
				</div>

		        <div class="actions clearfix">
		            <input type="submit" name="submit" value="Subir" class="btn_action" />
		        </div>
			</form>
		</div>
	</div>
</div>
{% endblock %}