{% extends "DodiciFansworldWebBundle:User:profile_edit_base.html.twig" %}

{% use "DodiciFansworldWebBundle:Layout/Snippet:profile_inner_fullwidth.html.twig"  %}

{% block user_edit_toolbar %}
	{% set current_edit_toolbar = 'profileimage' %}
	{{ parent() }}
{% endblock %}

{% block inner_content %}
	{{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/jcrop/jquery.Jcrop.min.js') }}" type="text/javascript"></script>
    <div class="row-fluid">
        <div class="span7">
	        <div class="current">
				<section id="picture" class="row-fluid">
                    <dl class="with-circles">
                        <dt>
                            <h4 class="numbered"><span>1</span> Elija una nueva foto de perfil </h4>
                            <div class="clearfix"></div>
                        </dt>

                            <div id="avatar-uploader" data-ismodal="false" data-upload="photo" data-type="profile" data-uploader-selector="avatar-uploader"></div>
                            <div id="splash-uploader" data-ismodal="false" data-upload="photo" data-type="splash" data-uploader-selector="splash-uploader"></div>

	                    <br/>
                	</dl>
                </section>
			</div>
        </div>
        <div class='span4'>
            <section class='ayuda'>
                <h2><span class="circular">?</span>Ayuda</h2>
                <p>
                    Luego de seleccionar la foto, se abrira una ventana modal que le permitira recortar y guardar la imagen.
                </p>
            </section>
		</div>
    </div>
{% endblock %}