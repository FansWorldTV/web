{% extends 'DodiciFansworldWebBundle:Profile:header_large_base.html.twig' %}

			
{% block splash_container %}  
	{% if entity.splash %}
        {{ entity.splash }}
    {% else %}
        <img src="{{ asset('bundles/dodicifansworldweb/images/profile_cover_no_image.jpg' )}}" />
    {% endif %}
{% endblock %}
	         
{% block header_title %}
	{{ entity }}
{% endblock %}
	            
{% block header_subtitle %}
    {% if entity.level %}
        {{ entity.level.title }}
    {% endif %}
{% endblock %}
                
{% block header_fship %}
    {% set fship = appstate.friendshipwith(entity) %}
    {% if appstate.canfriend(entity) and fship is null %}
        <div class="addFriend" targetId="{{ user.id }}">
            <button class="btn btn-large btn_friendship add btn-success"> Ser fan{% if entity.restricted %} (solicitar){% endif %}</button>
