{% block header_navbar %}
    {% if active_tab is not defined %}
        {% set active_tab = 'wall' %}
    {% endif %}
    <nav class='span12 profilenavbar-container'>
        <ul class="nav nav-tabs-profile ">
            <li {% if active_tab == 'wall' %}class="active"{% endif %}>
                <a  href="{{ path('user_wall', {username: user.username}) }}">Muro</a>
            </li>
            <li {% if active_tab == 'videos' %}class="active"{% endif %}>
                <a  href="{{ path('user_videos', {username: user.username}) }}">Videos</a>
            </li>
            <li {% if active_tab == 'photos' %}class="active"{% endif %}>
                <a href="{{ path('user_photos', {username: user.username}) }}">{{ 'Photos'|trans }}</a>
            </li>
            <li {% if active_tab == 'detail' %}class="active"{% endif %}>
                <a  href="{{ path('user_detail', {username: user.username}) }}">Info</a>
            </li>
            <li {% if active_tab == 'fans' %}class="active"{% endif %}>
                <a href="{{ path('user_fans', {'username': user.username}) }}">Fans</a>
            </li>
            <li {% if active_tab == 'following' %}class="active"{% endif %}>
                <a href="{{ path('user_following', {'username': user.username}) }}">Siguiendo</a>
            </li>
        </ul>
    </nav>
{% endblock %}