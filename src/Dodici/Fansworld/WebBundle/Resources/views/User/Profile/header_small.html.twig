{% extends 'DodiciFansworldWebBundle:Profile:header_small_base.html.twig' %}
	
{% block header_subtitle %}
    {% if entity.level %}
        {{ entity.level.title }}
    {% endif %}
{% endblock %}

{% block header_small_right %}
	{% if selfWall %}
            <div class='span2'>
                <div class='header-fship'>

                </div>
            </div>
        {% endif %}

        <div class='span4 numbers-info'>
            <section class='fotos-info'>
                {% set entityType = appstate.getType(entity) %}

                <div class='numero'>{% if entity.photoCount > 0 %}<a href="{% if entityType == 'user' %}{{ path(entityType ~ '_photos', {'username': entity.username}) }}{% else %}{{ path(entityType ~ '_photos', {'slug': entity.slug}) }}{% endif %}">{% endif %}{{ entity.photoCount }}{% if entity.photoCount > 0 %}</a>{%endif%}</div>
                <div class='tipo'>Fotos</div>
                <div class='separador' />
            </section>
            <section class='videos-info'>
                <div class='numero'>{% if entity.videoCount > 0 %}<a href="{{ path(entityType ~ '_videos', {'slug': entity.username}) }}">{% endif %}{{ entity.videoCount }}{% if entity.videoCount > 0 %}</a>{%endif%}</div>
                <div class='tipo'>Videos</div>
                <div class='separador' />
            </section>
            <section class='fans-info'>
                <div class='numero'>{% if entity.fanCount > 0 %}<a href="{{ path(entityType ~ '_fans', {'slug': entity.username}) }}">{% endif %}{{ entity.fanCount }}{% if entity.fanCount > 0 %}</a>{%endif%}</div>
                <div class='tipo'>Fans</div>
                <div class='separador' />
            </section>
	</div>
                
	{% if not selfWall %}
            <div class='span2'>
                <div class='header-fship'>
                    {% include "DodiciFansworldWebBundle:Default:blocks/fan_button.html.twig" with { entity:  entity, buttonSize: 'btn-large', fType: 'user' } %}
                </div>
            </div>
	{% endif %}
{% endblock %}