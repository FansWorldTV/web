    {% embed "DodiciFansworldWebBundle:Layout/Embed:profile_inner_fullwidth.html.twig" %}
        {% block inner_content %}
        	{% include "DodiciFansworldWebBundle:Default:blocks/avatar_grid.html.twig" with { block_title:'Top Fans'|trans, avatars: friends } %}    
        	
        	{% include "DodiciFansworldWebBundle:Default:blocks/avatar_grid.html.twig" with { block_title: 'Otros Fans'|trans, avatars: friends } %}
            
        {% endblock %}
    {% endembed %}		
