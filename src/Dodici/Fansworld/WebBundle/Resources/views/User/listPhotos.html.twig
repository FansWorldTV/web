{% extends "DodiciFansworldWebBundle::web.html.twig" %}

{% block title %}{{ parent() }} - Fotos{% endblock %}

{% block content %}
<div class="col_468 left margin">
    <div class="user_profile_head clearfix">
        <div class="avatar"> 
            {% if isLoggedUser %}
                <a href="user_info_edit.php">Cambiar</a> 
            {% endif %}
            <img src="{{ asset('bundles/dodicifansworldweb/images/user_pic.jpg' )}}" width="114" height="114">
        </div>
        <div class="user_info"> 
            {% if isLoggedUser %}
                <a class="btn" href="registro.php">Agregar</a>
            {% endif %}
            <h1>{{ user }}</h1>
            <div class="tabs clearfix"> 
                {% if isLoggedUser %}
                    <a class="btn_edit_info" href="user_info_edit.php" title="Editar informacion">Editar informacion</a>
                {% endif %}
                <ul>
                    <li><a href="user_profile.php">Muro</a></li>
                    <li><a class="active" href="user_albums.php">Fotos</a></li>
                    <li><a href="user_videos.php">Videos</a></li>
                    <li><a href="user_topics.php">Foro</a></li>
                    <li><a href="user_info.php">Informacion</a></li>
                </ul>
            </div>
        </div>
        {% if isLoggedUser %}
        <div class="update clearfix"> 
            <span></span> 
            <div class="upd_option clearfix"> 
                <a class="btn_picture" href="{{ path('photo_upload') }}">cargar imagen</a> 
                <a class="btn_picture" href="{{ path('album_create') }}">cargar album</a> 
            </div>    
        </div>
        {% endif %}
    </div>
    
    <div class="cont clearfix">
        <h2>Fotos</h2>
        <div class="album_covers">
            <div class="mask"> 
                {% for photo in photos %}
                    <div class="album_cover"> 
                        <a href="{{ path('photo_show', {'id': photo.id, 'slug': photo.slug}) }}"><img src="{{ photo.image }}"></a>
                        <a href="{{ path('photo_show', {'id': photo.id, 'slug': photo.slug}) }}">{{ photo.title }}</a>
                        <span><a href="{{ path('photo_show', {'id': photo.id, 'slug': photo.slug}) }}">{{ photo.commentCount }} comentarios</a></span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% if gotMore %}
        <a class="loadmore pictures" href="#1">ver m√°s</a> 
    {% endif %}
</div>
<input type="hidden" value="{{user.id}}" id="userid"/>
<div id="templates" class="hidden">
    <div class="album_cover">
        <a class="image" href="">
            <img src="">
        </a>
        <a class="title" href=""></a>
        <span></span>
    </div>
</div>
{% endblock %}
