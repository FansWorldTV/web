{% extends "DodiciFansworldWebBundle:User:base.html.twig" %}

{% use "DodiciFansworldWebBundle:Layout/Snippet:inner_fullwidth.html.twig"  %}

{% block title %}{{ parent() }} - Fotos{% endblock %}

{% block profile_tabs %}
	{% set active_tab = 'photos' %}
	{{ parent() }}
{% endblock %}

{% block inner_content %}
    {{ parent() }}
    <div class="pull-right"> 
        {% include 'DodiciFansworldWebBundle:Default:blocks/button_upload.html.twig'  with { 'type': 'photo' }%}
    </div>
    <div class="row-fluid">
        <h3>Fotos</h3>
        <div class="am-container photos">
            {% for photo in photos %}
                <a href="{{ path('photo_show', {id: photo.id, slug: photo.slug}) }}">{% thumbnail photo.image, 'small' with {title: photo.title} %}</a>
            {% endfor %}
        </div>
        {% if gotMore %}
            <a class="loadmore pictures" href="#1">ver m√°s</a> 
        {% endif %}
    </div>
    
<input type="hidden" value="{{user.id}}" id="userid"/>
<div id="templates" class="hidden">
    <div id="templates" class="hidden">
        <a href="" >
            <span class="title">
                <br/>
                <span class="photos-quant"></span>
            </span>
        </a>
    </div>
</div>
<script type="text/javascript">
    site.startMosaic($('.am-container'), {
        minsize: false,
        liquid: true,
        margin : 0
    });
</script>
{% endblock %}
