{% extends "DodiciFansworldWebBundle:User:profile_base.html.twig" %}

{% block title %}{{ parent() }} - Fotos{% endblock %}

{% block profile_tabs %}
	{% set active_tab = 'photos' %}
	{{ parent() }}
{% endblock %}

{% block profile_head %}
	{{ parent() }}
{% endblock %}

{% block inner_content %}
    {% if (user == app.user) %}
            <div class="row-fluid update clearfix"> 
                <div class="upd_option clearfix"> 
                    <a class="btn_picture btn_upload_photo" href="{{ path('photo_fileupload') }}">{{ 'upload photo'|trans }}</a> 
                </div>    
            </div>
    {% endif %}
    <div class="row-fluid">
        <h3>Fotos</h3>
        <div class="am-container photos">
            {% for photo in photos %}
                <a href="{{ path('user_photodetail', {id: photo.id, slug: photo.slug, username: user.username}) }}">{% thumbnail photo.image, 'small' with {title: photo.title} %}</a>
            {% endfor %}
        </div>
        {% if gotMore %}
            <a class="loadmore pictures" href="#1">ver m√°s</a> 
        {% endif %}
    </div>
    
<input type="hidden" value="{{user.id}}" id="userid"/>
<div id="templates" class="hidden">
    <div id="templates" class="hidden">
        <a href="" >
            <span class="title">
                <br/>
                <span class="photos-quant"></span>
            </span>
        </a>
    </div>
</div>
<script type="text/javascript">
    site.startMosaic($('.am-container'), {
        minsize: false,
        liquid: true,
        margin : 0
    });
</script>
{% endblock %}
