{% extends "DodiciFansworldWebBundle:User:base.html.twig" %}

{% block title %}{{ parent() }} - {{ 'Photos'|trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/albums.js') }}" type="text/javascript"></script>
{% endblock %}

{% block profile_tabs %}
	{% set active_tab = 'photos' %}
	{{ parent() }}
{% endblock %}


{% block profile_body %}
    {% embed "DodiciFansworldWebBundle:Layout/Embed:profile_inner_fullwidth.html.twig" %}
        {% block inner_content %}
            {% include 'DodiciFansworldWebBundle:Photo:blocks/albums_montage.html.twig'  %}
            
            <div class="row-fluid">
                <h3>Otras fotos ( {{ photos|length }} )</h3>
                <div class="am-container other-photos">
                    {% for photo in photos %}
                        <a href="{{ path('photo_show', {id: photo.id, slug: photo.slug}) }}" rel="tooltip" title="{{ photo.title }}">
                            {% thumbnail photo.image, 'small_square' with {title: photo.title} %}
                        </a>
                    {% endfor %}
                </div>
                
                {% if viewMorePhotos %}
                    <div class="clearfix"></div>
                    <a class="loadmore" href="{{ path('user_listphotos', {username: user.username}) }}">ver todas las im√°genes</a>
                {% endif %}
            </div>
            
            
            <input type="hidden" value="{{user.id}}" id="userid"/>
            <div id="templates" class="hidden">
                <a href="" >
                    <span class="title">
                        <br/>
                        <span class="photos-quant"></span>
                    </span>
                </a>
            </div>

            <script type="text/javascript">
                /**
                 * @todo benja
                 * hay que cambiar esto del montage
                 */
               montageHelper.doMontage($(".am-container.albums"), {minw: null, liquid: null, fillLastRow:false});
                montageHelper.doMontage($(".am-container.other-photos"), {minw: null, liquid: null, fillLastRow:false});
            </script>
        {% endblock %}
    {% endembed %}		
{% endblock %}