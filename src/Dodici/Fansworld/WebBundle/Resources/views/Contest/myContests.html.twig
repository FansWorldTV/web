{% extends "DodiciFansworldWebBundle:Layout:three_column.html.twig" %}

{% block title %}{{ parent() }} - {{ 'My Contents'|trans }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/contest.js') }}" type="text/javascript"></script>
{% endblock  %}

{% block content %}
<div class="contests">
    <div class="cont clearfix">
        <h1>{{ 'My Contents'|trans }}</h1>
        <div class="listContests">
            {% if contests|length>0  %}
                {% for contest in contests  %}
                    <div class="nota clearfix">
                        <h2><a href="{{ path('contest_show', {'id':contest.id, 'slug': contest.slug}) }}">{{ contest.title }}</a></h2>
                        {% if contest.image %}
                        <div class="media"><a href="{{ path('contest_show', {'id':contest.id, slug: contest.slug}) }}">{% thumbnail contest.image, 'small' %}</a></div>
                        {% endif %}
                        <div class="contenido">
                            <div> {{ contest.content|raw }} </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}    
                <div class="nota"><h2>{{ 'No results'|trans }}</h2></div>
            {% endif %}
        </div>    
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        contest.init();
    });
</script>
{% endblock %}
