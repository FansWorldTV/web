{% extends "DodiciFansworldWebBundle:Idol:base.html.twig" %}

{% block title %}{{ parent() }} - Muro{% endblock %}

{% block profile_tabs %}
	{% set active_tab = 'wall' %}
	{{ parent() }}
{% endblock %}


{% block profile_body %}
    {% embed "DodiciFansworldWebBundle:Layout/Embed:profile_inner_rsidebar.html.twig" %}
        {% block inner_content %}
        	<div class="cont">
            	{% include 'DodiciFansworldWebBundle:Comment/blocks:list.html.twig' with {entity: idol} %}
            </div>
        {% endblock %}

        {% block inner_sidebar %}
            {% render "DodiciFansworldWebBundle:Default:sidebarvideos" with {entity: idol} %}
        {% endblock %}
    {% endembed %}
{% endblock %}