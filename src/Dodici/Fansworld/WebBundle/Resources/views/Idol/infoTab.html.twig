{% extends "DodiciFansworldWebBundle:Idol:base.html.twig" %}

{% block title %}{{ parent() }} -  {{ 'Biography'|trans() }}{% endblock %}

{% block profile_tabs %}
	{% set active_tab = 'biography' %}
	{{ parent() }}
{% endblock %}


{% block profile_body %}
    
    {% embed "DodiciFansworldWebBundle:Layout/Embed:profile_inner_rlsidebar.html.twig" %}
        {% block inner_left_sidebar %}
            {% include "DodiciFansworldWebBundle:Default:blocks/info_list.html.twig" with { entity:idol, personalData: personalData} %}
        {% endblock %}
        
        {% block inner_content %}
                {% if idol.content %}
                    {% include "DodiciFansworldWebBundle:Default:blocks/text_box.html.twig" with { box_content: idol.content, box_class: 'aboutMe', box_title: '', raw: true } %}
                {% endif %}
        {% endblock %}
        
        {% block inner_right_sidebar %}
            TODO
        {% endblock %}
    {% endembed %}		
{% endblock %}