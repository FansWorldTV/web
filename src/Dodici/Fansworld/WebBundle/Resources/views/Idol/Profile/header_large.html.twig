{#
{% extends 'DodiciFansworldWebBundle:Profile:header_large_base.html.twig' %}
			
{% block splash_container %}  
	{% if highlights is defined and highlights is not null and highlights|length > 0 %}
        {% include 'DodiciFansworldWebBundle:Default/blocks:carousel.html.twig' with {carouselitems: highlights, showCaption: false} %}
	{% elseif entity.splash %}
		{% thumbnail entity.splash, 'splash' %}        
    {% else %}
        <img src="{{ asset('bundles/dodicifansworldweb/images/profile_cover_no_image.jpg' )}}" />
    {% endif %}
{% endblock %}
	            
{% block header_subtitle %}
    {% if entity.country %}
        {{ entity.country }}
    {% endif %}
    /
    {% if entity.teamname %}
        {{ entity.teamname }}
    {% endif %}
{% endblock %}#}

<div class="header-large-new">
    <div class="splash-container">
        {% thumbnail entity.splash, 'splash' %}
        <div class="action-block">
            <span class="name">{{ entity }}</span>
            <button class="btn btn-success">SER FAN</button>
        </div>
    </div>
    <div class="info-container">
        {% set entityType = appstate.getType(entity) %}
        {% if entityType == 'user' %}
            {% set pathparams = {username: entity.username} %}
        {% else %}
            {% set pathparams = {slug: entity.slug} %}
        {% endif %}
        <p class="description">{{ entity.content|raw|striptags|truncate(160) }}</p>

        <ul class="quantities">
            <li class="item">{% if entity.photoCount > 0 %}<a href="{{ path(entityType ~ '_photos', pathparams) }}">{% endif %}{{ entity.photoCount }}{% if entity.photoCount > 0 %}</a>{%endif%}</span><br/><span class="item-type">FOTOS</span></li>
            <li class="item">{% if entity.videoCount > 0 %}<a href="{{ path(entityType ~ '_videos', pathparams) }}">{% endif %}{{ entity.videoCount }}{% if entity.videoCount > 0 %}</a>{%endif%}<br/><span class="item-type">VIDEOS</span></li>
            {% if entityType == 'user' %}
                <li class="item">{% include "DodiciFansworldWebBundle:Default:blocks/puntos.html.twig" with { score: entity.score } %}<br/><span class="item-type">PTS</span></li>
            {% endif %}
            <li class="item">{% if entity.fanCount > 0 %}<a href="{{ path(entityType ~ '_fans', pathparams) }}">{% endif %}{{ entity.fanCount }}{% if entity.fanCount > 0 %}</a>{%endif%}<br/><span class="item-type">FANS</span></li>
        </ul>
    </div>
</div>