{% set user = app.user %}
{% extends "DodiciFansworldWebBundle:User:profile_edit_base.html.twig" %}

{% block title %}{{ parent() }} - Modificar Intereses{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script src="{{ asset('bundles/dodicifansworldweb/js/edit_interests.js') }}" type="text/javascript"></script>
{% endblock %}

{% block user_edit_toolbar %}
    {% set current_edit_toolbar = 'interests' %}
    {{ parent() }}
{% endblock %}

{% block profile_edit_body %}
    <section class="row-fluid">
        <div class="row">
            <h4 class="numbered"><span>1</span>Modificar Intereses</h4>
        </div>
        <div class="row">
            <ul class="categories fields" data-iduser="{{ app.user.id }}">
                {% for category in categories %}
                <li class="clearfix interestcategory" data-idcategory="{{category.id}}">
                    <label>{{ category }}</label>
                    <div class="field">
                        <input type="text" class="interest-chooser" data-idcategory="{{ category.id }}" />
                    </div>
                    <ul class="currentinterests clearfix">
                    </ul>
                </li>
                {% endfor %}
            </ul>
        </div>
    </section>

    <hr/>

    <section class="row-fluid">
        <div class="row">
            <h4 class="numbered"><span>2</span>Equipo favorito de :</h4>
        </div>
        <div class="row">
            <ul class="categories fields">
                {% for sport in sports %}
                <form action="" method="post" name="favorite">
                    <li class="clearfix">
                        <label>{{ sport.title }}</label>
                        <select name="sport[{{ sport.id }}]" >
                            <option value="null"></option>
                            {% for team in sport.teams %}
                            <option value="{{ team.id }}"  {% if sport.selected == team.id %} selected="true" {% endif %} >{{ team }}</option>
                            {% endfor %}
                        </select>
                    </li>
                {% endfor %}
                    <input type="submit" value="Guardar" />
                </form>
            </ul>
        </div>
    </section>

{% endblock %}