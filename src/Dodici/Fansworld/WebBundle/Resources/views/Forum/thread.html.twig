{% extends "DodiciFansworldWebBundle:Layout:three_column.html.twig" %}

{% block title %}{{ parent() }} - Foto{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/dodicifansworldweb/js/forum.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <div class="cont clearfix">
        <div class="media">
            <div class="media_user">
                <div class="avatar">
                    {% thumbnail thread.author.image, 'avatar' %}
                </div>
                <a href="{{ path('user_land', {username: thread.author.username}) }}">{{ thread.author }}</a> <br>
                <span class="timeago" data-time="{{ thread.createdAt|date('c') }}">{{ thread.createdAt|date('c') }}</span>
            </div>
            <div class="topic">
                <h1>{{ thread.title }}</h1>
                {{ thread.content }}
            </div>
            {% include 'DodiciFansworldWebBundle:Default:share.html.twig' with {entity: thread, likebutton: false} %}
        </div>
    </div>
    <div class="cont clearfix">
        <h3>Respuestas</h3>
        <div class="comments clearfix">
            {% if posts|length>0 %}
                {% for post in posts%}
                    <div class="comment clearfix">
                        <div class="avatar"> 
                            <a href="{{ path('user_land', {username: post.author.username}) }}">
                                <img src="demo/rodri.jpg" width="50" height="50">
                            </a> 
                        </div>
                        <div class="user_comment"> 
                            <span class="action_user"><a href="{{ path('user_land', {username: post.author.username}) }}">{{ post.author }}</a> <span class="timeago" data-time="{{ post.createdAt|date('c') }}">{{ post.createdAt|date('c') }}</span></span>
                            {{ post.content }}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                No hay respuestas
            {% endif %}
        </div>
        {% if addMore %}
            <a id="addMore" class="loadmore posts" href="#1">ver mas respuestas</a> 
        {% endif %}
    </div>
    <div class="cont clearfix">
        <h3>Agregar respuesta</h3>
        <div class="add_comment">
            <form>
                <textarea cols="" rows="4"></textarea>
                <a class="btn comment" href="#1">Comentar</a>
            </form>
        </div>
    </div>
    <input type="hidden" id="threadId" value="{{ thread.id }}" />
    <div id="templates" class="hidden">
        <div class="comment clearfix">
            <div class="avatar"> 
                <a href="url">
                    <img src="demo/rodri.jpg" width="50" height="50">
                </a> 
            </div>
            <div class="user_comment"> 
                <span class="action_user">
                    <a href="url">author</a> 
                    <span class="timeago" data-time="date">date</span>
                </span>
            </div>
        </div>
    </div>
    
    <script type="text/javascript">
        $(document).ready(function(){
            forum.init();
        });
    </script>
{% endblock %}