{% block field_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <p class="help-block error">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</p>
                
            {% endfor %}
        {% endif %}
    {% endspaceless %}   
{% endblock %}

{% block field_label %}
{% spaceless %}
    <label class='control-label' for="{{ id }}">
    	{{ id|trans([], 'FOSUserBundle') }}
    	{% if required %}
    		<span class="required" title="Campo requerido">*</span>
    	{% endif %}
    </label>
{% endspaceless %}
{% endblock field_label %}



{% block field_row %}
{% spaceless %}
	{% if form.haschildren %}
	<div class="unit">
		{{ form_widget(form) }}
	</div>
	{% else %}
    <div class="control-group ">
        {{ form_label(form) }}
        <div class="controls">
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
    {% endif %}
{% endspaceless %}
{% endblock field_row %}